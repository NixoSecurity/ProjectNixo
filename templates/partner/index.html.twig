{% extends 'base.html.twig' %}

{% block title %}Tous les partenaires 
{% endblock %}


{% block body %}
<div class="container">

<table class="table">
					<thead>
						<tr>
							<td>Nom du partenaire</td>
							<td>Logo</td>

						</tr>
					</thead>
					<tbody>
						{% for part in partners | reverse  %}
							<tr>
								<td>{{ part.title }}</td>
								<td>
									{% if vich_uploader_asset(part,'coverFile') %}
										<img src="{{ vich_uploader_asset(part,'coverFile')|imagine_filter('coverFile') }}" id="object-position-1" alt="image d'un projet">
									{% endif %}
								</td>
                                <td>
								<a type="button" class="btn btn-outline-warning" title="Editer" href="{{ path('app_admin_editPartner' , {id: part.id })}}">
									<i class="fa-solid fa-pen-to-square"></i>
								</a>
								<form
									action="{{ path('app_admin_deletePartner', { id: part.id } ) }}" method="post" class="d-inline">
									{# csrf_token().. creation d'un jeton unique  #}
									<input type="hidden" name="token" value="{{ csrf_token('delete-partner-'~ part.id) }}">
									<button class="btn  btn-outline-danger">
										<i class="fa-solid fa-trash-can"></i>
									</button>
								</form>
							</td>
							</tr>
							
						{% endfor %}

					</tbody>
				</table>

</div>

{% endblock %}