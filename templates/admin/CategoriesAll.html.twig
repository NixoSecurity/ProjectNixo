{% extends 'baseAdmin.html.twig' %}

{% block title %}Toutes les categories
{% endblock %}

{% block body %}

	<div class="container mt-5">
		<div class="row mt-4 ">
			<div class="col-12 col-lg-12">
				<div class="row">
					<div class="col-6">
						<h2>Categories</h2>
					</div>
					<div class="col-6">
						<a class="btn btn-danger" href="{{ path('app_admin_newCat')}}">Nouvelle categorie</a>
					</div>
				</div>

				<table class="table table-color">
					<thead>

						<tr>
							<td>Nom Categorie</td>
							<td>Action</td>
						</tr>
					</thead>
					<tbody>
						{% for cat in categories %}
							<tr>
								<td>{{ cat.name }}</td>
								<td>
									<a type="button" class="btn btn-edit" title="Editer" href="{{ path('app_admin_editCat' , {id: cat.id })}}">
										<i class="fa-solid fa-pen-to-square"></i>
									</a>
									<form
										action="{{ path('app_admin_deleteCat', { id: cat.id } ) }}" method="post" class="d-inline">
										{# csrf_token().. creation d'un jeton unique  #}
										<input type="hidden" name="token" value="{{ csrf_token('delete-project-'~ cat.id) }}">
										<button class="btn  btn-delete">
											<i class="fa-solid fa-trash-can"></i>
										</button>
									</form>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>
		</div>


		{# section categories#}

		{{ knp_pagination_render(categories) }}

	{% endblock %}
