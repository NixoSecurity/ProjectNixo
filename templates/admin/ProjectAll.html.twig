{% extends 'baseAdmin.html.twig' %}

{% block title %}Tous les projets
{% endblock %}

{% block body %}

	<div class="container mt-5">

		<div class="col-12 col-lg-12">


			<div class="row">
				<div class="col-2">
					<h2>Projets</h2>
				</div>
				<div class="col-10">
					<a class="btn btn-danger" type="button " href="{{ path('app_admin_newProject')}}">Nouveau projet</a>
				</div>
			</div>


			<table class="table table-color">
				<thead class="fs-5 ">
					<tr>
						<td>
							<div class="dropdown">

							<a class=" dropdown-toggle" role="button" data-bs-toggle="dropdown" href="{{ path('app_adminProject') }}">  Titre</a>
							<ul class="dropdown-menu">
							<li><a class="dropdown-item" href="{{ path('app_adminProject',{ filter: "ASC" }) }}">ASC</a></li>
							<li><a class="dropdown-item" href="{{ path('app_adminProject',{ filter: "DESC"}) }}">DESC</a></li>
							</ul>
							</div>
						
						</td>
						<td>Description</td>
						<td>Ville</td>
						<td>Créer le</td>
						<td>Image</td>
						<td>
						<div class="dropdown">

							<a class=" dropdown-toggle" role="button" data-bs-toggle="dropdown" href="{{ path('app_adminProject') }}">  Type de client</a>
							<ul class="dropdown-menu">
							{% for cli in clients %}
							
								<li>
									<a class="dropdown-item" href="{{ path('app_adminProject',{ filter: cli.name }) }}">{{ cli.name }}</a>
								</li>
								
								{% endfor %}
							</ul>
							
						</div></td>
						<td>Action</td>

					</tr>
				</thead>

				<tbody>
					{% for project in projects | reverse %}
						<tr>

							<td>{{ project.title }}</td>
							<td>{{ project.Description | u.truncate(20,'...') }}</td>
							<td>{{ project.city }}</td>
							<td>{{ project.createdAt | date('d-m-Y') }}</td>

							<td>
								{% if vich_uploader_asset(project,'coverFile') %}
									<img src="{{ vich_uploader_asset(project,'coverFile')|imagine_filter('coverFile') }}" id="object-position-1" alt="image d'un projet">
								{% endif %}
							</td>
							<td>{{ project.client.name }}</td>
							<td>
								<a type="button" class="btn btn-outline-warning" title="Editer" href="{{ path('app_admin_editProject' , {id: project.id })}}">
									<i class="fa-solid fa-pen-to-square"></i>
								</a>
								{# Formulaire securisé de suppresion #}
								<form
									action="{{ path('app_admin_deleteProject', { id: project.id } ) }}" method="post" class="d-inline">
									{# csrf_token().. creation d'un jeton unique  #}
									<input type="hidden" name="token" value="{{ csrf_token('delete-project-'~ project.id) }}">
									<button class="btn btn-outline-danger">
										<i class="fa-solid fa-trash-can"></i>
									</button>
								</form>
							</td>

						</tr>
					{% endfor %}
				</tbody>
			</table>
			{{ knp_pagination_render(projects) }}


		</div>
	</div>


{% endblock %}

